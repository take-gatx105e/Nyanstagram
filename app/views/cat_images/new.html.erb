<% @page_title = "にゃんこページへの画像追加" %>
<div class="text-center mt-5 mb-5">
  <h1><%= @page_title %></h1>
</div>

<div class="row mt-3">
  <div class="col-sm-6 offset-sm-3">
    <% url = cat_images_path(@cat, @image) %>
    <%= form_for @image, as: "image", url: url do |f| %>
      <%= render "form", f: f %>
      <%= f.submit '登  録', class: 'btn btn-primary btn-block mb-5' %>
    <% end %>
  </div>
</div>
